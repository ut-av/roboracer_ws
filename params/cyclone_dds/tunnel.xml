<CycloneDDS xmlns="https://cdds.io/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://cdds.io/config https://raw.githubusercontent.com/eclipse-cyclonedds/cyclonedds/master/etc/cyclonedds.xsd">
    <Domain Id="any">
        <General>
            <Interfaces>
                <NetworkInterface name="*" multicast="false" />
            </Interfaces>
            <AllowMulticast>false</AllowMulticast>
        </General>
        <Discovery>
            <ParticipantIndex>auto</ParticipantIndex>
            <MaxAutoParticipantIndex>42</MaxAutoParticipantIndex>
            <Peers>
                <!-- For car side: use localhost to receive tunneled connections -->
                <Peer Address="localhost"/>
            </Peers>
            <!-- Use fixed port range matching the SSH tunnel -->
            <Ports>
                <BasePort>7400</BasePort>
                <ParticipantPortGain>2</ParticipantPortGain>
                <MulticastPortGain>0</MulticastPortGain>
            </Ports>
        </Discovery>
        <!-- Limit port usage to enable easy SSH tunneling -->
        <Internal>
            <Port>
                <Base>7400</Base>
                <Gain>2</Gain>
            </Port>
        </Internal>
    </Domain>
</CycloneDDS>
